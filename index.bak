        .brand-logo:hover .logo-symbol::after {
            transform: scaleX(1);
        }
        
        .brand-text {
            display: flex;
            flex-direction: column;
            line-height: 1.2;
        }
        
        .brand-name {
            font-size: 1.2rem;
            font-weight: bold;
            color: #fff;
        }
        
        .brand-slogan {
            font-size: 0.8rem;
            color: rgba(255,255,255,0.8);
