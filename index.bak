        }

        .results-heading {
            text-align: center;
            margin-bottom: 50px;
            color: white;
        }

        .results-heading h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .results-heading p {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.9);
        }

        /* تأثير حركي للأرقام */
        @keyframes countUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-number {
            animation: countUp 1s ease-out forwards;
        }
        
        /* أنماط نموذج الاتصال */
        .contact-section {
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
            padding: 80px 0;
            position: relative;
        }

        .contact-form {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .contact-info {
            background: linear-gradient(135deg, #1a237e 0%, #0d47a1 100%);
            color: white;
            padding: 40px;
            border-radius: 20px;
            height: 100%;
        }

        .contact-input {
            border: 2px solid #e1e1e1;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

        .contact-input:focus {
            border-color: #1a237e;
            box-shadow: 0 0 15px rgba(26,35,126,0.1);
        }

        .contact-btn {
            background: linear-gradient(45deg, #1a237e, #0d47a1);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 10px;
            font-weight: bold;
            transition: all 0.3s ease;
            width: 100%;
        }

        .contact-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(26,35,126,0.3);
        }

        .contact-icon {
            width: 50px;
            height: 50px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        .contact-info h3 {
            margin-bottom: 30px;
            font-size: 24px;
        }

        .contact-info-item {
            margin-bottom: 30px;
        }

        .contact-info-item p {
            margin: 0;
            opacity: 0.9;
        }

        .social-links {
            margin-top: 40px;
        }

        .social-links a {
            color: white;
            margin-left: 15px;
            font-size: 20px;
            transition: all 0.3s ease;
        }

        .social-links a:hover {
            transform: translateY(-3px);
            opacity: 0.8;
        }
        
        /* أنماط الوضع الليلي */
        :root {
            --primary-color: #1a237e;
            --secondary-color: #0d47a1;
            --text-color: #333;
            --bg-color: #fff;
            --card-bg: #fff;
            --nav-bg: linear-gradient(to right, #1a237e, #0d47a1);
            --footer-bg: #1a237e;
            --border-color: #e1e1e1;
        }

        [data-theme="dark"] {
            --primary-color: #3f51b5;
            --secondary-color: #5c6bc0;
            --text-color: #f5f5f5;
            --bg-color: #121212;
            --card-bg: #1e1e1e;
            --nav-bg: linear-gradient(to right, #121212, #1e1e1e);
            --footer-bg: #121212;
            --border-color: #333;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .navbar {
            background: var(--nav-bg) !important;
        }

        .card {
            background-color: var(--card-bg);
            border-color: var(--border-color);
        }

        .footer {
            background-color: var(--footer-bg);
        }

        /* زر تبديل الوضع */
        .theme-switch-wrapper {
            position: fixed;
            bottom: 20px;
            left: 20px;
            display: flex;
            align-items: center;
            z-index: 999;
            padding: 10px;
            background: rgba(0, 0, 0, 0.1);
            border-radius: 30px;
            backdrop-filter: blur(5px);
        }

        .theme-switch {
            display: inline-block;
            width: 60px;
            height: 34px;
            position: relative;
        }

        .theme-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: var(--primary-color);
            transition: .4s;
            border-radius: 34px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider {
            background-color: var(--secondary-color);
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

        .theme-switch-wrapper .theme-icon {
            margin: 0 10px;
            font-size: 20px;
            color: var(--text-color);
        }

        /* تعديلات الوضع الليلي للأقسام */
        [data-theme="dark"] .contact-form {
            background: var(--card-bg);
        }

        [data-theme="dark"] .contact-input {
            background: var(--bg-color);
            color: var(--text-color);
            border-color: var(--border-color);
        }

        [data-theme="dark"] .result-card {
            background: rgba(255, 255, 255, 0.05);
        }

        [data-theme="dark"] .service-card {
            background: var(--card-bg);
        }

        /* أنماط قسم آراء العملاء */
        .testimonials-section {
            padding: 80px 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
            position: relative;
            overflow: hidden;
        }

        .testimonial-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 30px;
            margin: 20px 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .testimonial-card:hover {
            transform: translateY(-10px);
        }

        .testimonial-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .client-image {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
            margin-left: 15px;
            border: 3px solid var(--primary-color);
        }

        .client-info h4 {
            margin: 0;
            color: var(--text-color);
            font-size: 1.2rem;
        }

        .client-info p {
            margin: 5px 0;
            color: var(--secondary-color);
            font-size: 0.9rem;
        }

        .rating {
            color: #ffd700;
            margin: 10px 0;
        }

        .testimonial-text {
            color: var(--text-color);
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .quote-icon {
            position: absolute;
            bottom: 20px;
            left: 20px;
            font-size: 40px;
            opacity: 0.1;
            color: var(--primary-color);
        }

        /* تأثير حركي للبطاقات */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .testimonial-card.animate {
            animation: fadeInUp 0.6s ease forwards;
        }

        [data-theme="dark"] .testimonials-section {
            background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        }

        /* أنماط قسم الأسئلة الشائعة */
        .faq-section {
            padding: 80px 0;
            background: var(--bg-color);
        }

        .faq-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .faq-item {
            background: var(--card-bg);
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .faq-question {
            padding: 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-weight: 600;
            color: var(--text-color);
        }

        .faq-question:hover {
            background: var(--primary-color);
            color: white;
        }

        .faq-answer {
            padding: 0 20px;
            max-height: 0;
            overflow: hidden;
            transition: all 0.3s ease;
            color: var(--text-color);
        }

        .faq-item.active .faq-answer {
            padding: 20px;
            max-height: 300px;
        }

        .faq-icon {
            transition: transform 0.3s ease;
        }

        .faq-item.active .faq-icon {
            transform: rotate(180deg);
        }

        /* تأثير حركي للأسئلة */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .faq-item {
            animation: slideIn 0.5s ease forwards;
            opacity: 0;
        }

        .faq-item:nth-child(1) { animation-delay: 0.1s; }
        .faq-item:nth-child(2) { animation-delay: 0.2s; }
        .faq-item:nth-child(3) { animation-delay: 0.3s; }
        .faq-item:nth-child(4) { animation-delay: 0.4s; }
        .faq-item:nth-child(5) { animation-delay: 0.5s; }

        /* أنماط معرض الأعمال */
        .portfolio-section {
            padding: 80px 0;
            background: var(--bg-color);
        }

        .portfolio-filters {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 40px;
        }

        .filter-btn {
            padding: 8px 20px;
            border: 2px solid var(--primary-color);
            border-radius: 25px;
            background: transparent;
            color: var(--text-color);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .filter-btn:hover,
        .filter-btn.active {
            background: var(--primary-color);
            color: white;
        }

        .portfolio-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            padding: 20px;
        }

        .portfolio-item {
            position: relative;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            opacity: 0;
            transform: translateY(20px);
        }

        .portfolio-item.show {
            opacity: 1;
            transform: translateY(0);
        }

        .portfolio-item:hover {
            transform: translateY(-10px);
        }

        .portfolio-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .portfolio-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .portfolio-item:hover .portfolio-overlay {
            opacity: 1;
        }

        .portfolio-title {
            color: white;
            font-size: 1.5rem;
            margin-bottom: 10px;
            text-align: center;
        }

        .portfolio-category {
            color: var(--primary-color);
            font-size: 1rem;
            margin-bottom: 15px;
        }

        .portfolio-link {
            padding: 8px 20px;
            background: var(--primary-color);
            color: white;
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .portfolio-link:hover {
            background: white;
            color: var(--primary-color);
        }

        .portfolio-stats {
            background: var(--card-bg);
            padding: 20px;
            border-radius: 0 0 15px 15px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            text-align: center;
        }

        .stat-item h4 {
            color: var(--primary-color);
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        .stat-item p {
            color: var(--text-color);
            font-size: 0.9rem;
            margin: 0;
        }

        /* ستايل البوت */
        #chat-widget {
            position: fixed;
            bottom: 20px;
            left: 20px;
            z-index: 1000;
        }

        .chat-button {
            width: 60px;
            height: 60px;
            background: var(--primary-color, #1a237e);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: white;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

        .chat-button:hover {
            transform: scale(1.1);
        }

        .chat-popup {
            width: 350px;
            height: 500px;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            display: none;
            position: fixed;
            bottom: 80px;
            left: 20px;
            z-index: 1000;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .chat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background: var(--primary-color, #1a237e);
            color: white;
        }

        .close-btn {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        .chat-messages {
            height: 380px;
            padding: 15px;
            overflow-y: auto;
        }

        .message {
            margin-bottom: 15px;
        }

        .user-bubble {
            background: #e9ecef;
            color: #333;
            padding: 10px 15px;
            border-radius: 15px;
            margin-left: 20%;
